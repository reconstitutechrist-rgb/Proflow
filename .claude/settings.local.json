{
  "permissions": {
    "allow": [
      "Bash(npm run dev:*)",
      "Bash(npm install:*)",
      "Bash(taskkill:*)",
      "Bash(curl:*)",
      "Bash(node verify-db-connection.js:*)",
      "Bash(node verify-db-node.js:*)",
      "Bash(npm run build:*)",
      "Bash(git push:*)",
      "Bash(cat:*)",
      "Bash(git checkout:*)",
      "Bash(npm update:*)",
      "Bash(npx @tailwindcss/upgrade@next)",
      "Bash(git add:*)",
      "Bash(npm ls:*)",
      "Bash(npm uninstall:*)",
      "Bash(git branch:*)",
      "Bash(find:*)",
      "Bash(grep:*)",
      "Bash(git commit:*)",
      "Bash(git reset:*)",
      "Bash(npm run lint:*)",
      "Bash(npm run test:run:*)",
      "Bash(npm run format:check:*)",
      "Bash(npm run format:*)",
      "Bash(npx commitlint:*)",
      "Bash(npx prettier:*)",
      "Bash(git pull:*)",
      "Bash(git stash:*)",
      "Bash(timeout:*)",
      "Bash(dir:*)",
      "Bash(npx eslint:*)"
    ],
    "deny": ["Read(./.env)", "Read(./.env.*)", "Read(./.env.local)"]
  },
  "hooks": {
    "PostToolUse": [
      {
        "matcher": "Edit|Write",
        "hooks": [
          {
            "type": "command",
            "command": "powershell -Command \"$p='$file_path'; if ($p -match '\\.(js|jsx|json|css|md)$' -and $p -notmatch 'node_modules') { npx prettier --write $p 2>$null }\""
          }
        ]
      }
    ]
  }
}
